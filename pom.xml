<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>fm.audiobox</groupId>
	<artifactId>components</artifactId>
	<packaging>pom</packaging>

	<name>components</name>

	<modules>
		<module>core</module>
		<module>sync</module>
	</modules>

	<version>1.0-SNAPSHOT</version>
	<description>AudioBox.fm JavaLib offers full access to the RESTful
		AudioBox.fm API, giving the developer the ability to make use of the
		native API XML through comfortable Java objects.</description>
	<url>http://github.com/audiobox/AudioBox.fm-JavaLib</url>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.host>${fm.audiobox.host}</project.host>
	</properties>

	<organization>
		<name>iCoreTech Research Labs</name>
		<url>http://www.icoretech.org/</url>
	</organization>

	<licenses>
		<license>
			<name>GNU GPL 3</name>
			<url>http://www.gnu.org/licenses/gpl.html</url>
			<distribution>repo</distribution>
			<comments>The GNU General Public License (GNU GPL or simply GPL) is
				the most widely used free software license, originally written by
				Richard Stallman for the GNU project.</comments>
		</license>
	</licenses>

	<scm>
		<connection>scm:git:git@github.com:audiobox/AudioBox.fm-JavaLib.git</connection>
		<developerConnection>scm:git:git@github.com:audiobox/AudioBox.fm-JavaLib.git</developerConnection>
		<url>http://github.com/audiobox/AudioBox.fm-JavaLib/tree/edge</url>
	</scm>


	<issueManagement>
		<system>GitHub Issues</system>
		<url>http://github.com/audiobox/AudioBox.fm-JavaLib/issues</url>
	</issueManagement>

	<inceptionYear>2010</inceptionYear>

	<developers>
		<developer>
			<id>Keytwo</id>
			<name>Valerio Chiodino</name>
			<email>keytwo.why@gmail.com</email>
			<url>http://www.keytwo.net</url>
			<timezone>Rome</timezone>
		</developer>
		<developer>
			<id>fat</id>
			<name>Fabio Tunno</name>
			<email>fat@fatshotty.net</email>
			<url>http//fatshotty.net</url>
			<timezone>Rome</timezone>
			<roles>
			</roles>
		</developer>
	</developers>


	<build>

		<resources>
			<resource>
				<directory>${basedir}/src/main/resources</directory>
				<filtering>true</filtering>
				<includes>
					<include>**/*.*</include>
				</includes>
			</resource>
		</resources>

		<plugins>


			<!-- Testing framework -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.5</version>
				<configuration>
					<skipTests>${fm.audiobox.skipTests}</skipTests>
				</configuration>
			</plugin>

			<!-- Test coverage reports -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>cobertura-maven-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<instrumentation>
						<ignores>
							<ignore>fm.audiobox.core.util.*;fm.audiobox.sync.*;com.twmacinta.*
							</ignore>
						</ignores>
						<excludes>
							<exclude>**/util/*.class</exclude>
						</excludes>
					</instrumentation>
				</configuration>
				<executions>
					<execution>
						<goals>
							<goal>clean</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			
			<!-- Javadoc -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.7</version>
				<configuration>
					<excludePackageNames>*.util.*</excludePackageNames>
				</configuration>
				<executions>
					<execution>
						<id>attach-javadocs</id>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<!-- Compiler (used to set the JDK version) -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.1</version>
				<configuration>
					<compilerVersion>1.6</compilerVersion>
					<fork>true</fork>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>

			<!-- Release (used to perform deploy) -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>2.0</version>
			</plugin>


			<!-- Manifest -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>2.2</version>
				<configuration>
					<archive>
						<manifestEntries>
							<Url>${project.url}</Url>
							<Extension-Name>${project.name}</Extension-Name>
							<Specification-Vendor>${project.organization.name}
							</Specification-Vendor>
							<Implementation-Vendor>${project.organization.name}
							</Implementation-Vendor>
							<Implementation-Title>${project.name}</Implementation-Title>
							<Implementation-Version>${project.version}
							</Implementation-Version>
						</manifestEntries>
					</archive>
				</configuration>
			</plugin>

		</plugins>

		<extensions>
			<!-- Enabling the use of FTP -->
			<extension>
				<groupId>org.apache.maven.wagon</groupId>
				<artifactId>wagon-ftp</artifactId>
				<version>1.0-beta-6</version>
			</extension>
		</extensions>
	</build>


	<reporting>
		<plugins>

			<!-- Test coverage reports -->
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>cobertura-maven-plugin</artifactId>
				<version>2.4</version>
				<configuration>
					<formats>
						<format>html</format>
						<format>xml</format>
					</formats>
				</configuration>
			</plugin>
			
			<!-- Changelog reports -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-changelog-plugin</artifactId>
				<version>2.2</version>
			</plugin>

		</plugins>
	</reporting>


	<dependencies>
		<dependency>
			<groupId>org.apache.httpcomponents</groupId>
			<artifactId>httpclient</artifactId>
			<version>4.0.1</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.httpcomponents</groupId>
			<artifactId>httpmime</artifactId>
			<version>4.0.1</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.8.1</version>
			<type>jar</type>
			<scope>compile</scope>
		</dependency>
	</dependencies>

	<distributionManagement>
		<repository>
			<id>keytwo.net</id>
			<name>Keytwo.net Repository</name>
			<url>ftp://ftp.keytwo.net</url>
		</repository>
		<site>
			<id>keytwo.net</id>
			<name>maven.keytwo.net doc site</name>
			<url>ftp://ftp.keytwo.net</url>
		</site>
	</distributionManagement>

	<profiles>
		<profile>
			<id>default-profile</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
			<properties>
				<fm.audiobox.host>audiobox.fm</fm.audiobox.host>
				<fm.audiobox.skipTests>true</fm.audiobox.skipTests>
			</properties>
		</profile>

		<profile>
			<id>test-profile</id>
			<activation>
				<property>
					<name>env</name>
					<value>test</value>
				</property>
			</activation>
			<properties>
				<fm.audiobox.host>audiobox.dev</fm.audiobox.host>
				<fm.audiobox.skipTests>false</fm.audiobox.skipTests>
			</properties>
		</profile>
	</profiles>
	
	<repositories>
		<!-- JBoss.org repository (used of APIviz)-->
		<repository>
			<id>jboss.releases</id>
			<name>JBoss releases</name>
			<url>http://repository.jboss.org/maven2</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>false</enabled>
			</snapshots>
		</repository>
	</repositories>

</project>


